<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>



    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
<style name="table">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:stretchColumns">1</item>
    <item name="android:layout_marginTop">100dp</item>
</style>

    <style name="row">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:weightSum">1</item>

    </style>
<style name="cell_1">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">0.7</item>
    <item name="android:padding">3dp</item>
    <item name="android:textSize">18dp</item>
    <item name="android:layout_margin">1.5dp</item>
    <item name="android:textColor">#000000</item>
    <item name="android:background">#FFF</item>
    <item name="android:textIsSelectable">true</item>
    <item name="android:layout_height">match_parent</item>
</style>
    <style name="cell_2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_margin">1.5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:background">@drawable/table_border</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
<style name="curr_cell_1">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">0.45</item>
    <item name="android:textSize">19dp</item>
    <item name="android:padding">3dp</item>
    <item name="android:textColor">#000</item>
    <item name="android:layout_gravity">center_vertical</item>

</style>
    <style name="curr_cell_2">
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">17dp</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="curr_img">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">0.15</item>
    </style>
<style name="curr_row">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:weightSum">1</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:layout_marginTop">15dp</item>
    <item name="android:paddingVertical">5dp</item>
</style>
</resources>
